@model ConfigurationModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="NeedQuoteOrderCall" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="NeedQuoteOrderCall" /> 
            <span asp-validation-for="NeedQuoteOrderCall"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="EnalbeSendingEmailNotificationToStoreOwnerOnSyncError_OverrideForStore"
                                         asp-input="EnalbeSendingEmailNotificationToStoreOwnerOnSyncError"
                                         asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="EnalbeSendingEmailNotificationToStoreOwnerOnSyncError" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="EnalbeSendingEmailNotificationToStoreOwnerOnSyncError" />
            <span asp-validation-for="EnalbeSendingEmailNotificationToStoreOwnerOnSyncError"></span>
        </div>
    </div>
    <nop-nested-setting asp-for="EnalbeSendingEmailNotificationToStoreOwnerOnSyncError">
        <div class="form-group row" id="pnlEnalbeSendingEmailNotificationToStoreOwnerOnSyncError">
            <div class="col-md-3">
                <nop-override-store-checkbox asp-for="AdditionalEmailAddresses_OverrideForStore" asp-input="AdditionalEmailAddresses" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <nop-label asp-for="AdditionalEmailAddresses" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="AdditionalEmailAddresses" />
                <span asp-validation-for="AdditionalEmailAddresses"></span>
            </div>
        </div>
    </nop-nested-setting>
	<div class="form-group row">
		<div class="col-md-3">
			<nop-override-store-checkbox asp-for="SpecSheetLocation_OverrideForStore"
										 asp-input="SpecSheetLocation"
										 asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
			<nop-label asp-for="SpecSheetLocation" />
		</div>
		<div class="col-md-9">
			<nop-editor asp-for="SpecSheetLocation" />
			<span asp-validation-for="SpecSheetLocation"></span>
		</div>
	</div>
</div>

<script>
    $(document).ready(function () {
        $("#@Html.IdFor(model => model.EnalbeSendingEmailNotificationToStoreOwnerOnSyncError)")
            .click(toggleEnalbeSendingEmailNotificationToStoreOwnerOnSyncError);
        toggleEnalbeSendingEmailNotificationToStoreOwnerOnSyncError();
    });

    function toggleEnalbeSendingEmailNotificationToStoreOwnerOnSyncError() {
        if ($('#@Html.IdFor(model => model.EnalbeSendingEmailNotificationToStoreOwnerOnSyncError)').is(':checked')) {
            $('#pnlEnalbeSendingEmailNotificationToStoreOwnerOnSyncError').show();
        } else {
            $('#pnlEnalbeSendingEmailNotificationToStoreOwnerOnSyncError').hide();
        }
    }
</script>