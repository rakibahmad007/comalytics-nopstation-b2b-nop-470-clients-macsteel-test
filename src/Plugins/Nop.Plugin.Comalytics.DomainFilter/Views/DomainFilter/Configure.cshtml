@model ConfigurationModel
@{
    //page title
    ViewBag.Title = T("Plugins.Comalytics.DomainFilter.Configuration").Text;
    NopHtml.SetActiveMenuItemSystemName("Domain Filter Configuration");

    const string hideConfigurationBlockAttributeName = "Domain.Configration.HideInfoBlock";
    var customer = await workContext.GetCurrentCustomerAsync();
    var hideConfigurationBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideConfigurationBlockAttributeName);
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="DomainFilter" asp-action="Configure" method="post">
    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <nop-cards id="domains-cards">
                    <nop-card asp-name="domain-info" asp-icon="fa fa-info" asp-title="@T("Plugins.Comalytics.DomainFilter.Configuration")" asp-hide-block-attribute-name="@hideConfigurationBlockAttributeName" asp-hide="@hideConfigurationBlock" asp-advanced="false">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="EnableFilter" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableFilter" />
                                    <span asp-validation-for="EnableFilter"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-9 offset-md-3">
                                    <input type="submit" class="btn btn-primary" value="@T("Admin.Common.Save")" />
                                </div>
                            </div>
                        </div>
                    </nop-card>
                </nop-cards>
            </div>
        </div>
    </section>
</form>