@using NopStation.Plugin.B2B.B2BB2CFeatures.Areas.Admin.Models;
@model ErpSalesOrgSearchModel

@{
    Layout = "_AdminLayout";
    //title
    NopHtml.AddTitleParts(T("NopStation.Plugin.B2B.B2BB2CFeatures.SiteMapNode.Title.ErpSalesOrgs").Text);
    ViewBag.PageTitle = T("NopStation.Plugin.B2B.B2BB2CFeatures.SiteMapNode.Title.ErpSalesOrgs").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName(B2BB2CFeaturesDefaults.ErpSalesOrgs_SiteMapNode_SystemName);
}

@{
    var customer = await workContext.GetCurrentCustomerAsync();

    const string hideSearchBlockAttributeName = "ErpSalesOrgsPage.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);

    const string hideErpSalesOrgsBlockAttributeName = "ErpSalesOrgsPage.hideErpSalesOrgsBlock";
    var hideErpSalesOrgsBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideErpSalesOrgsBlockAttributeName);
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Plugin.Misc.NopStation.ERPIntegrationCore.ErpSalesOrg.PageHeader.ErpSalesOrgs")
    </h1>
    <div class="float-right">
        <a asp-action="CreateErpSalesOrg" class="btn btn-primary">
            <i class="fas fa-plus-square"></i>
            @T("Admin.Common.AddNew")
        </a>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-search">
                    <div class="card-body">
                        <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Plugin.Misc.NopStation.ERPIntegrationCore.ErpSalesOrg.SearchSalesOrgs")</div>
                            <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                            <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                        </div>
                        <div class="search-body @(hideSearchBlock ? "closed" : "")">

                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="Name" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="Name" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="Code" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="Code" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="Email" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="Email" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="ShowInActive" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-select asp-for="ShowInActive" asp-items="Model.ShowInActiveOption" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="text-center col-md-12">
                                    <button type="button" id="search-erpSalesOrg" class="btn btn-primary btn-search">
                                        <i class="fas fa-search"></i>
                                        @T("Admin.Common.Search")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <nop-card asp-name="ErpSalesOrg" asp-icon="fas fa-building" asp-title="@T("Plugin.Misc.NopStation.ERPIntegrationCore.ErpSalesOrg.ErpSalesOrgs")" asp-hide-block-attribute-name="@hideErpSalesOrgsBlockAttributeName" asp-hide="@hideErpSalesOrgsBlock" asp-advanced="true">
                    <div class="card-body">
                        <div class="card card-default">
                            <div class="card-body">
                                @await Html.PartialAsync("Table", new DataTablesModel
                                {
                                    Name = "ErpSalesOrg-grid",
                                    UrlRead = new DataUrl("ErpSalesOrgList", "ErpSalesOrg", null),
                                    UrlUpdate = new DataUrl("ErpSalesOrgEdit", "ErpSalesOrg", null),
                                    UrlDelete = new DataUrl("Delete", "ErpSalesOrg", null),
                                    SearchButtonId = "search-erpSalesOrg",
                                    Length = Model.PageSize,
                                    LengthMenu = Model.AvailablePageSizes,
                                    Filters = new List<FilterParameter>
                                    {
                                        new FilterParameter(nameof(Model.Name), typeof(string)),
                                        new FilterParameter(nameof(Model.Code), typeof(string)),
                                        new FilterParameter(nameof(Model.Email), typeof(string)),
                                        new FilterParameter(nameof(Model.ShowInActive), typeof(string)),
                                    },
                                    ColumnCollection = new List<ColumnProperty>
                                    {
                                        new ColumnProperty(nameof(ErpSalesOrgModel.Name))
                                        {
                                            Title = T("Plugin.Misc.NopStation.ERPIntegrationCore.ErpSalesOrg.Field.Name").Text,
                                            Width = "150"
                                        },
                                        new ColumnProperty(nameof(ErpSalesOrgModel.Code))
                                        {
                                            Title = T("Plugin.Misc.NopStation.ERPIntegrationCore.ErpSalesOrg.Field.Code").Text,
                                            Width = "150"
                                        },
                                        new ColumnProperty(nameof(ErpSalesOrgModel.Email))
                                        {
                                            Title = T("Plugin.Misc.NopStation.ERPIntegrationCore.ErpSalesOrg.Field.Email").Text,
                                            Width = "150"
                                        },
                                        new ColumnProperty(nameof(ErpSalesOrgModel.IsActive))
                                        {
                                            Title = T("Plugin.Misc.NopStation.ERPIntegrationCore.ErpSalesOrg.Field.IsActive").Text,
                                            Width = "70",
                                            Render = new RenderBoolean(),
                                            ClassName = NopColumnClassDefaults.CenterAll
                                        },
                                        new ColumnProperty(nameof(ErpSalesOrgModel.Id))
                                        {
                                            Title = T("Admin.Common.Edit").Text,
                                            Width = "70",
                                            ClassName =  NopColumnClassDefaults.Button,
                                            Render = new RenderButtonEdit(new DataUrl("~/Admin/ErpSalesOrg/ErpSalesOrgEdit/"))
                                        },
                                        new ColumnProperty(nameof(ErpSalesOrgModel.Id))
                                        {
                                            Title = T("Admin.Common.Delete").Text,
                                            Width = "70",
                                            ClassName =  NopColumnClassDefaults.Button,
                                            Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                                            Visible = false
                                        }
                                    }
                                })
                            </div>
                        </div>
                    </div>
                </nop-card>
            </div>
        </div>
    </div>
</section>

<style>
    .button-column {
        text-align: center !important;
    }
</style>