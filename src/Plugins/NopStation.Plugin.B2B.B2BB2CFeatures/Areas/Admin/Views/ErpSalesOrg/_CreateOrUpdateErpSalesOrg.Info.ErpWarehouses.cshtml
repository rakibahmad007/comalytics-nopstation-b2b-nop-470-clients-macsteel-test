@model ErpSalesOrgModel

<div class="card-body">
    @await Html.PartialAsync("Table", new DataTablesModel
    {
        Name = "salesorg-warehouses-grid",
        UrlRead = new DataUrl("ErpSalesOrgWareHouseList", "ErpSalesOrg",
            new RouteValueDictionary { [nameof(Model.ErpSalesOrgWarehouseSearchModel.ErpSalesOrgId)] = Model.ErpSalesOrgWarehouseSearchModel.ErpSalesOrgId }),
        UrlUpdate = new DataUrl("EditErpSalesOrgWareHouse", "ErpSalesOrg", null),
        UrlDelete = new DataUrl("DeleteErpSalesOrgWareHouse", "ErpSalesOrg", null),
        Length = Model.ErpSalesOrgWarehouseSearchModel.PageSize,
        LengthMenu = Model.ErpSalesOrgWarehouseSearchModel.AvailablePageSizes,
        ColumnCollection = new List<ColumnProperty>
        {
            new ColumnProperty(nameof(ErpSalesOrgWarehouseModel.WarehouseName))
            {
                Title = T("Admin.Configuration.Shipping.Warehouses.Fields.Name").Text,
                Width = "200",
                Render = new RenderLink(new DataUrl("~/Admin/Shipping/EditWarehouse", nameof(ErpSalesOrgWarehouseModel.WarehouseId)))
            },
            new ColumnProperty(nameof(ErpSalesOrgWarehouseModel.ErpWarehouseCode))
            {
                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.B2BSalesOrgWarehouse.Fields.ErpWarehouseCode").Text,
                Width = "200",
                Editable = true,
                EditType = EditType.String
            },
    new ColumnProperty(nameof(ErpSalesOrgWarehouseModel.LastUpdateTime))
            {
                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.B2BSalesOrgWarehouse.Fields.LastUpdateTime").Text,
                Width = "200"
            },
            new ColumnProperty(nameof(ErpSalesOrgWarehouseModel.Id))
            {
                Title = T("Admin.Common.Edit").Text,
                Width = "100",
                ClassName = NopColumnClassDefaults.Button,
                Render = new RenderButtonsInlineEdit()
            },
            new ColumnProperty(nameof(ErpSalesOrgWarehouseModel.Id))
            {
                Title = T("Admin.Common.Delete").Text,
                Width = "100",
                ClassName = NopColumnClassDefaults.Button,
                Render = new RenderButtonRemove(T("Admin.Common.Delete").Text)
            }
        }
    })
</div>

<nop-alert asp-alert-id="statesAlert" asp-alert-message="@T("Admin.Common.Alert.States.Failed")" />
