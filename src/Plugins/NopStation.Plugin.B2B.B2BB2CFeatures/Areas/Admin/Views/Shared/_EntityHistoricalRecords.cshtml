@model ErpBaseEntityModel

@{
    var showTour = ViewBag.ShowTour ?? false;

    const string hideInfoBlockAttributeName = "ERPCommon.Entity.HistoricalRecords";
    var customer = await workContext.GetCurrentCustomerAsync();
    var hideInfoBlock = showTour ? false : await genericAttributeService.GetAttributeAsync<bool>(customer, hideInfoBlockAttributeName);
}


@if (Model.Id > 0)
{
    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <nop-cards id="customer-cards">
                    <nop-card asp-name="customer-orders" asp-icon="fas fa-history" asp-title="@T("B2BB2CFeatures.Common.HistoricalRecords")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock" asp-advanced="false">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="CreatedOnUtc" />
                                </div>
                                <div class="col-md-9 justify-content-center align-self-center">
                                    @Model.CreatedOnUtc
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="UpdatedOnUtc" />
                                </div>
                                <div class="col-md-9 justify-content-center align-self-center">
                                    @Html.DisplayFor(model => model.UpdatedOnUtc)
                                </div>
                            </div>
                        </div>
                    </nop-card>
                </nop-cards>
            </div>
        </div>
    </section>
}