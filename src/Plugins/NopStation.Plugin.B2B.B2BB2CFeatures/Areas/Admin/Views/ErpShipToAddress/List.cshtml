                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .button-column {
        text-align: center !important;
    }
</style>

<script asp-location="Footer">

    function RenderErpAccount(data, type, row, meta) {
        if (row.ErpAccountId <= 0)
            return data;

        if (row.IsDeletedErpAccount)
          return '<a href="#">' + data + '</a>';

        return '<a href="/Admin/ErpAccount/ErpAccountEdit/' + row.ErpAccountId + '">' + data + '</a>';
    }

    function RenderSalesOrgAccount(data, type, row, meta) {
        if (row.ErpAccountSalesOrgId <= 0)
            return data;

        return '<a href="/Admin/ErpSalesOrg/ErpSalesOrgEdit/' + row.ErpAccountSalesOrgId + '">' + data + '</a>';
    }

</script>