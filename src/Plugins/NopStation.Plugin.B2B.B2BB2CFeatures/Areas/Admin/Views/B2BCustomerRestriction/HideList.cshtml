@model SpecialIncludeExcludeSearchModel

@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = T("NopStation.Plugin.B2B.B2BB2CFeatures.SiteMapNode.Title.CustomerRestrictionHide").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName(B2BB2CFeaturesDefaults.CustomerRestrictionHide_SiteMapNode_SystemName);
}

@{
    const string hideSearchBlockAttributeName = "CustomerRestrictionHide.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<nop-antiforgery-token />
<div class="content-header clearfix">
    <h1 class="float-left">
        Hide for specific account
    </h1>
    <div class="float-right">
        <a asp-action="CreateForHide" class="btn btn-primary">
            <i class="fa fa-plus-square"></i>
            @T("Admin.Common.AddNew")
        </a>
        <button type="button" id="delete-selected" class="btn bg-red">
            <i class="fa fa-trash"></i> Delete selected
        </button>
        <nop-action-confirmation asp-button-id="delete-selected" />
        <div class="btn-group">
            <button type="button" title="Export" class="btn btn-success">
                <i class="fa fa-download"></i>
                @T("Admin.Common.Export")
            </button>
            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">&nbsp;</span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li>
                    <a asp-action="ExportXlsx" asp-route-type="20" asp-route-mode="0">
                        <i class="fa fa-file-excel-o"></i>
                        @T("Admin.Common.ExportToExcel") (All)
                    </a>
                </li>
                <li>
                    <a asp-action="ExportXlsx" asp-route-type="20" asp-route-mode="1">
                        <i class="fa fa-file-excel-o"></i>
                        @T("Admin.Common.ExportToExcel") (Active only)
                    </a>
                </li>
                <li>
                    <a asp-action="ExportXlsx" asp-route-type="20" asp-route-mode="2">
                        <i class="fa fa-file-excel-o"></i>
                        @T("Admin.Common.ExportToExcel") (Inactive only)
                    </a>
                </li>
            </ul>
        </div>
        <button type="button" name="importexcel" title="Import from Excel" class="btn bg-olive"
                data-toggle="modal" data-target="#importexcel-window">
            <i class="fa fa-upload"></i>
            @T("Admin.Common.Import")
        </button>
    </div>
</div>

<div class="content">
    <div class="form-horizontal">
        <div class="cards-group">
            <div class="card card-default card-search">
                <div class="card-body">
                    <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                        <div class="search-text">@T("Admin.Common.Search")</div>
                        <div class="icon-search"><i class="fa fa-search" aria-hidden="true"></i></div>
                        <div class="icon-collapse"><i class="fa fa-angle-down" aria-hidden="true"></i></div>
                    </div>

                    <div class="search-body @(hideSearchBlock ? "closed" : "")">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="AccountName" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="AccountName" />
                                    </div>
                                </div>
                                <div class="form-group row" @(Model.AvailableSalesOrgs.SelectionIsNotPossible() ? Html.Raw("style=\"display:none\"") : null)>
                                    <div class="col-md-4">
                                        <nop-label asp-for="ErpSalesOrgId" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-select asp-for="ErpSalesOrgId" asp-items="Model.AvailableSalesOrgs" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="AccountNumber" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="AccountNumber" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row" @(Model.AvailablePublishedOptions.SelectionIsNotPossible() ? Html.Raw("style=\"display:none\"") : null)>
                                    <div class="col-md-4">
                                        <nop-label asp-for="Published" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-select asp-for="Published" asp-items="Model.AvailablePublishedOptions" />
                                    </div>
                                </div>
                                <div class="form-group row" @(Model.AvailableStatuses.SelectionIsNotPossible() ? Html.Raw("style=\"display:none\"") : null)>
                                    <div class="col-md-4">
                                        <nop-label asp-for="IsActive" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-select asp-for="IsActive" asp-items="Model.AvailableStatuses" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-7 offset-md-5">
                                <button type="button" id="search-shown-special-products-for-account-grid" class="btn btn-primary btn-search">
                                    <i class="fa fa-search"></i>
                                    @T("Admin.Common.Search")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-default">
            <div class="card-body">
                @await Html.PartialAsync("Table", new DataTablesModel
                {
                    Name = "shown-special-products-for-account-grid",
                    UrlRead = new DataUrl("HideList", "B2BCustomerRestriction", null),
                    UrlUpdate = new DataUrl("Edit", "B2BCustomerRestriction", new RouteValueDictionary { ["type"] = 20 }),
                    UrlDelete = new DataUrl("Delete", "B2BCustomerRestriction", new RouteValueDictionary { ["type"] = 20 }),
                    SearchButtonId = "search-shown-special-products-for-account-grid",
                    Length = Model.PageSize,
                    LengthMenu = Model.AvailablePageSizes,
                    Filters = new List<FilterParameter>
                    {
                        new FilterParameter(nameof(Model.AccountName)),
                        new FilterParameter(nameof(Model.AccountNumber)),
                        new FilterParameter(nameof(Model.ErpSalesOrgId)),
                        new FilterParameter(nameof(Model.IsActive)),
                        new FilterParameter(nameof(Model.Published))
                    },
                    ColumnCollection = new List<ColumnProperty>
                    {
                        new ColumnProperty(nameof(SpecialIncludeExcludeModel.Id))
                        {
                            IsMasterCheckBox = true,
                            Render = new RenderCheckBox("checkbox_shown-special-products-for-account"),
                            ClassName =  NopColumnClassDefaults.CenterAll,
                            Width = "50",
                        },
                        new ColumnProperty(nameof(SpecialIncludeExcludeModel.SalesOrgCode))
                        {
                            Title = T("Plugin.Misc.NopStation.Plugin.B2B.B2BB2CFeatures.SpecialIncludeExcludeModel.Fields.ErpAccountSalesOrganisation").Text,
                            Width = "200",
                            Render = new RenderLink(new DataUrl("~/Admin/ErpSalesOrg/ErpSalesOrgEdit", nameof(SpecialIncludeExcludeModel.ErpSalesOrgId)))
                        },
                        new ColumnProperty(nameof(SpecialIncludeExcludeModel.AccountName))
                        {
                            Title = T("Plugin.Misc.NopStation.Plugin.B2B.B2BB2CFeatures.SpecialIncludeExcludeModel.Fields.AccountName").Text,
                            Width = "200"
                        },
                        new ColumnProperty(nameof(SpecialIncludeExcludeModel.AccountNumber))
                        {
                            Title = T("Plugin.Misc.NopStation.Plugin.B2B.B2BB2CFeatures.SpecialIncludeExcludeModel.Fields.AccountNumber").Text,
                            Width = "200",
                            Render = new RenderLink(new DataUrl("~/Admin/ErpAccount/ErpAccountEdit", nameof(SpecialIncludeExcludeModel.ErpAccountId)))
                        },
                        new ColumnProperty(nameof(SpecialIncludeExcludeModel.ProductName))
                        {
                            Title = T("Admin.Catalog.Products.Fields.Name").Text,
                            Width = "100"
                        },
                        new ColumnProperty(nameof(SpecialIncludeExcludeModel.ProductSKU))
                        {
                            Title = T("Admin.Catalog.Products.Fields.Sku").Text,
                            Width = "200",
                            Render = new RenderLink(new DataUrl("~/Admin/Product/Edit", nameof(SpecialIncludeExcludeModel.ProductId)))
                        },
                        new ColumnProperty(nameof(SpecialIncludeExcludeModel.LastUpdate))
                        {
                            Title = "Last activity",
                            Width = "50",
                            ClassName =  NopColumnClassDefaults.CenterAll,
                            Render = new RenderDate()
                        },
                        new ColumnProperty(nameof(SpecialIncludeExcludeModel.IsActive))
                        {
                            Title = T("Admin.Vendors.Fields.Active").Text,
                            Width = "50",
                            ClassName =  NopColumnClassDefaults.CenterAll,
                            Editable = true,
                            EditType = EditType.Checkbox,
                            Render = new RenderBoolean()
                        },
                        new ColumnProperty(nameof(SpecialIncludeExcludeModel.Id))
                        {
                            Title = T("Admin.Common.Edit").Text,
                            Width = "100",
                            ClassName =  NopColumnClassDefaults.Button,
                            Render = new RenderButtonsInlineEdit()
                        },
                        new ColumnProperty(nameof(SpecialIncludeExcludeModel.Id))
                        {
                            Title = T("Admin.Common.Delete").Text,
                            Width = "100",
                            ClassName =  NopColumnClassDefaults.Button,
                            Render = new RenderButtonRemove(T("Admin.Common.Delete").Text)
                        }
                    }
                })

                <script>
                    $(document).ready(function () {
                        $("#delete-selected-action-confirmation-submit-button").bind("click", function () {
                            var postData = {
                                selectedIds: selectedIds
                            };
                            addAntiForgeryToken(postData);
                            $.ajax({
                                cache: false,
                                type: "POST",
                                url: "@(Url.Action("DeleteSelected", "B2BCustomerRestriction"))",
                                data: postData,
                                traditional: true,
                                error: function (jqXHR, textStatus, errorThrown) {
                                    $('#deleteSelectedFailed-info').text(errorThrown);
                                    $("#deleteSelectedFailed").click();
                                },
                                complete: function (jqXHR, textStatus) {
                                    updateTable('#shown-special-products-for-account-grid');
                                }
                            });
                            $('#delete-selected-action-confirmation').modal('toggle');
                            return false;
                        });
                    });
                </script>
            </div>
        </div>
    </div>
</div>
</div>

<div id="importexcel-window" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="importexcel-window-title">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="importexcel-window-title">@T("Admin.Common.ImportFromExcel")</h4>
            </div>
            <form asp-controller="B2BCustomerRestriction" asp-action="ImportExcel" method="post" enctype="multipart/form-data">
                <div class="form-horizontal">
                    <div class="modal-body">
                        <ul class="common-list">
                            <li>
                                <em>@T("Admin.Common.ImportFromExcel.ManyRecordsWarning")</em>
                            </li>
                        </ul>
                        <div class="form-group row">
                            <div class="col-md-2">
                                <div class="label-wrapper">
                                    <label class="control-label">
                                        @T("Admin.Common.ExcelFile")
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-10">
                                <input type="hidden" id="type" name="type" value="20" class="form-control" />
                                <input type="file" id="importexcelfile" name="importexcelfile" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            @T("Admin.Common.ImportFromExcel")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<nop-alert asp-alert-id="deleteSelectedFailed" />