		</div>
	</div>
</div>

<script asp-location="Footer">
    $(document).ready(function () {
        // Initially hide the elements based on checkbox state
        if ($('#UseNopProductPrice').prop('checked')) {
            $('#UseProductSpecialPrice').prop('checked', false);
            $('#UseProductGroupPrice').prop('checked', false);
            $('#UseProductCombinedPrice').prop('checked', false);
            $('.useProductSpecialPrice, .useProductGroupPrice, .useProductCombinedPrice').hide();
        }

        $('#UseNopProductPrice').change(function () {
            if (this.checked) {
                $('#UseProductSpecialPrice').prop('checked', false);
                $('#UseProductGroupPrice').prop('checked', false);
                $('#UseProductCombinedPrice').prop('checked', false);
                $('.useProductSpecialPrice, .useProductGroupPrice, .useProductCombinedPrice').hide();
            } else {
                $('.useProductSpecialPrice, .useProductGroupPrice, .useProductCombinedPrice').show();
            }
        });

        $('#UseProductGroupPrice').change(function () {
            if (this.checked) {
                $('#UseProductSpecialPrice').prop('checked', false);
                $('#UseProductCombinedPrice').prop('checked', false);
            }
        });
        $('#UseProductSpecialPrice').change(function () {
            if (this.checked) {
                $('#UseProductGroupPrice').prop('checked', false);
                $('#UseProductCombinedPrice').prop('checked', false);
            }
        });
        $('#UseProductCombinedPrice').change(function () {
            if (this.checked) {
                $('#UseProductGroupPrice').prop('checked', false);
                $('#UseProductSpecialPrice').prop('checked', false);
            }
        });
        if (!$('#UsePrefilterFacet').prop('checked')) {
            $('.preFilterFacetSpecificationAttribute').hide();
        }

        $('#UsePrefilterFacet').change(function () {
            if (this.checked) {
                $('.preFilterFacetSpecificationAttribute').show();
            } else {
                $('.preFilterFacetSpecificationAttribute').hide();
            }
        });

    });
</script>