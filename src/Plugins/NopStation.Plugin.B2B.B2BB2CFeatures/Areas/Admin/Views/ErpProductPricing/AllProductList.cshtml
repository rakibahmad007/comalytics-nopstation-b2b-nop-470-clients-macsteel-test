<form asp-controller="ErpProductPricing" asp-action="SpecialPriceSelected" method="post" id="SpecialPricing-selected-form">
	<input type="hidden" id="selectedIds" name="selectedIds" value="" />
</form>

<form asp-controller="ErpProductPricing" asp-action="PriceGroupProductPricingSelected" method="post" id="PriceGroupProductPricing-selected-form">
	<input type="hidden" id="selectedIds" name="selectedIds" value="" />
</form>

<script>
    $(document).ready(function () {
        $('#PriceGroupProductPricing-selected').click(function (e) {
            e.preventDefault();
            var ids = selectedIds.join(",");
            $('#PriceGroupProductPricing-selected-form #selectedIds').val(ids);
            $('#PriceGroupProductPricing-selected-form').submit();
            updateTable('#products-grid');
            return false;
        });


		$('#SpecialPricing-selected').click(function (e) {
            e.preventDefault();
            var ids = selectedIds.join(",");
            $('#SpecialPricing-selected-form #selectedIds').val(ids);
            $('#SpecialPricing-selected-form').submit();
            updateTable('#products-grid');
            return false;
        });
    });
</script>

<style>
    .button-column {
        text-align: center !important;
    }
</style>