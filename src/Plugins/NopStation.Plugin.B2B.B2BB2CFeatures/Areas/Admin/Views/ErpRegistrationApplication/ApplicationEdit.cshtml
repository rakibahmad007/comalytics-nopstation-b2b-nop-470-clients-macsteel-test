@model ApplicationFormModel

@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = T("B2BB2CFeatures.Admin.ErpRegistrationApplication.ApplicationForm.PageTitle.Edit").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName(B2BB2CFeaturesDefaults.ErpRegistrationApplication_SiteMapNode_SystemName);
}

<form asp-area="Admin" asp-controller="ErpRegistrationApplication" asp-action="ApplicationEdit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("B2BB2CFeatures.Admin.ErpRegistrationApplication.ApplicationForm.Button.Edit")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("B2BB2CFeatures.Admin.ErpRegistrationApplication.ApplicationForm.Button.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="fas fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @if (!Model.IsApproved)
            {
                <button type="submit" name="approve" class="btn btn-success">
                    <i class="fas fa-check"></i>
                    @T("B2BB2CFeatures.Admin.ErpRegistrationApplication.ApplicationForm.Button.Approve")
                </button>
            }
            else
            {
                <button type="submit" name="approve" class="btn btn-success" disabled>
                    <i class="fas fa-check"></i>
                    @T("B2BB2CFeatures.Admin.ErpRegistrationApplication.ApplicationForm.Button.Approved")
                </button>
            }
            <span id="erpRegistrationApplication-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateApplication", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="erpRegistrationApplication-delete" />