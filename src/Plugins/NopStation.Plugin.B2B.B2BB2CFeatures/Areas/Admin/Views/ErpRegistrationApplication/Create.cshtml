@model ApplicationFormModel

@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = T("B2BB2CFeatures.Admin.ErpRegistrationApplication.ApplicationForm.PageTitle.AddNew").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName(B2BB2CFeaturesDefaults.ErpRegistrationApplication_SiteMapNode_SystemName);
}

<form asp-area="Admin" asp-controller="ErpRegistrationApplication" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("B2BB2CFeatures.Admin.ErpRegistrationApplication.ApplicationForm.Button.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("B2BB2CFeatures.Admin.ErpRegistrationApplication.ApplicationForm.Button.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateApplication", Model)
</form>