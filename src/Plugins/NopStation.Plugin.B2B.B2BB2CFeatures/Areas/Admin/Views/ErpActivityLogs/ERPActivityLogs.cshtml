@model ErpActivityLogsSearchModel

@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = @T("NopStation.Plugin.B2B.B2BB2CFeatures.SiteMapNode.Title.ErpActivityLogsList").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName(B2BB2CFeaturesDefaults.ErpActivityLogsList_SiteMapNode_SystemName);
}

@{
    const string hideSearchBlockAttributeName = "ErpActivityLogPage.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Title")
    </h1>
    <div class="float-right">
        <form asp-controller="ErpActivityLogs" asp-action="ClearAll" method="post">
            <button type="submit" id="clearall" name="clearall" class="btn bg-red">
                <i class="far fa-trash-alt"></i>
                @T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.ClearAll")
            </button>
            <nop-action-confirmation asp-button-id="clearall" />
        </form>
    </div>

</div>

<section class="content">
    <div class="container-fluid">
    <div class="form-horizontal">
        <div class="cards-group">
            <div class="card card-default card-search">
                <div class="card-body">
                    <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                        <div class="search-text">@T("Admin.Common.Search")</div>
                        <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                        <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                    </div>

                    <div class="search-body @(hideSearchBlock ? "closed" : "")">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="EntityType" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-select asp-for="EntityType" asp-items="Model.AvailableEntityType" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="EntityDescription" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="EntityDescription" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="IpAddress" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="IpAddress" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                            <nop-label asp-for="ErpActivityLogsTypeId" />
                                    </div>
                                    <div class="col-md-8">
                                            <nop-select asp-for="ErpActivityLogsTypeId" asp-items="Model.ErpActivityLogsType" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="PropertyName" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="PropertyName" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="NewValue" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="NewValue" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="OldValue" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="OldValue" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="CreatedOnFrom" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="CreatedOnFrom" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-label asp-for="CreatedOnTo" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-editor asp-for="CreatedOnTo" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="text-center col-12">
                                <button type="button" id="search-erp-activity-log" class="btn btn-primary btn-search">
                                    <i class="fas fa-search"></i>
                                    @T("Admin.Common.Search")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-default">
                <div class="card-body">

                    @await Html.PartialAsync("Table", new DataTablesModel
                    {
                        Name = "erp-activityLog-grid",
                        UrlRead = new DataUrl("ListLogs", "ErpActivityLogs", null),
                        UrlDelete = new DataUrl("ActivityLogDelete", "ErpActivityLogs", null),
                       SearchButtonId = "search-erp-activity-log",
                        Length = Model.PageSize,
                        LengthMenu = Model.AvailablePageSizes,
                        Filters = new List<FilterParameter>
                        {
                            new FilterParameter(nameof(Model.EntityType)),
                            new FilterParameter(nameof(Model.EntityDescription)),
                            new FilterParameter(nameof(Model.IpAddress)),
                            new FilterParameter(nameof(Model.ErpActivityLogsTypeId)),
                            new FilterParameter(nameof(Model.PropertyName)),
                            new FilterParameter(nameof(Model.NewValue)),
                            new FilterParameter(nameof(Model.OldValue)),
                            new FilterParameter(nameof(Model.CreatedOnFrom)),
                            new FilterParameter(nameof(Model.CreatedOnTo)),
                        },
                        ColumnCollection = new List<ColumnProperty>
                        {
                            new ColumnProperty(nameof(ErpActivityLogsModel.EntityName))
                            {
                                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Fields.EntityType").Text,
                                Width = "200"
                            },
                            new ColumnProperty(nameof(ErpActivityLogsModel.EntityDescription))
                            {
                                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Fields.EntityDescription").Text,
                                Width = "400",
                            },
                            new ColumnProperty(nameof(ErpActivityLogsModel.CustomerEmail))
                            {
                                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Fields.CustomerEmail").Text,
                                Width = "200",
                                Render = new RenderLink(new DataUrl("~/Admin/Customer/Edit", nameof(ErpActivityLogsModel.CustomerId)))
                            },
                            new ColumnProperty(nameof(ErpActivityLogsModel.ErpActivityLogTypeName))
                            {
                                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Fields.ErpActivityLogsType").Text,
                                Width = "100"
                            },
                            new ColumnProperty(nameof(ErpActivityLogsModel.PropertyName))
                            {
                                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Fields.PropertyName").Text,
                                Width = "200"
                            },
                            new ColumnProperty(nameof(ErpActivityLogsModel.OldValue))
                            {
                                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Fields.OldValue").Text,
                                Width = "200",
                            },
                            new ColumnProperty(nameof(ErpActivityLogsModel.NewValue))
                            {
                                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Fields.NewValue").Text,
                                Width = "200",
                            },
                            new ColumnProperty(nameof(ErpActivityLogsModel.IpAddress))
                            {
                                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Fields.IpAddress").Text,
                                Width = "100"
                            },
                            new ColumnProperty(nameof(ErpActivityLogsModel.Comment))
                            {
                                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Fields.Comment").Text
                            },
                            new ColumnProperty(nameof(ErpActivityLogsModel.CreatedOn))
                            {
                                Title = T("Plugin.Misc.NopStation.B2BB2CFeatures.ErpActivityLogs.Fields.CreatedOn").Text,
                                Width = "200",
                                Render = new RenderDate()
                            },
                            new ColumnProperty(nameof(ErpActivityLogsModel.Id))
                            {
                                Title = T("Admin.Common.Delete").Text,
                                Width = "100",
                                Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                                ClassName = NopColumnClassDefaults.Button
                            }
                        }
                    })
                </div>
            </div>
        </div>
    </div>
</div>
</section>