<script>
    function ErpShipToAddress(data, type, row, meta) {
        return '<a href="/Admin/ErpShipToAddress/Edit/' + row.ErpShipToAddressId + '">' + row.ErpShipToAddress.AddressHtml + '</a>';
    }

    // Function to update the ErpShipToAddressId dropdown
    function updateErpShipToAddresses(accountId) {
        $.ajax({
            type: 'GET',
            url: '@Url.Action("ShipToAddressDropdownList", "ErpNopUser")', // Replace with the actual controller and action names if necessary
            data: { erpAccountId: accountId },
            success: function (data) {
                // Clear existing options in the ErpShipToAddressId dropdown
                $('#ErpShipToAddressId').empty();
                // Add new options based on the response data
                $.each(data, function (index, item) {
                    $('#ErpShipToAddressId').append($('<option></option>').val(item.Value).text(item.Text))
                });
            },
            error: function (xhr, status, error) {
                console.error('Error fetching data:', error);
            }
        });
    }

    // Event listener for the AccountId dropdown change
    function accountChanged(accountId) {
        // Call the method to update the ErpShipToAddressId dropdown
        updateErpShipToAddresses(accountId);
    }

    // Initialize the ErpShipToAddressId dropdown with the initial value of AccountId
    $(document).ready(function () {
        // Get the initial value of AccountId
        var initialAccountId = $('#AccountId').val();
        // Call the method to update the ErpShipToAddressId dropdown
        updateErpShipToAddresses(initialAccountId);
    });
</script>

