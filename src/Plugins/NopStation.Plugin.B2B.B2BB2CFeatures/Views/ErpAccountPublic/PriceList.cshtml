@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ColumnsOne";
}
<style>
    .body-text {
        text-align: center;
        font-size: 20px;
    }

    .page-body {
        position: relative;
    }

    .btn-container {
        margin: 0;
        margin-top: 50px;
        position: absolute;
        left: 50%;
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
    }

    .download-btn {
        min-width: 300px !important;
        text-align: center;
    }

    .download-btn-container {
        margin-bottom: 20px;
    }
</style>
<div class="page price-list-page">
	<div class="page-title">
		<h1>@T("Plugin.Misc.NopStation.B2BB2CFeatures.Downloadable.PriceListDownLoad")</h1>
	</div>
	<div class="page-body">
		<div class="content">
			<div class="body-text">@T("Plugin.Misc.NopStation.B2BB2CFeatures.PriceListDownLoad.Instruction")</div>
			<div class="btn-container download-btn-container">
				<button type="submit" onclick="ErpAccountCommon.downloadFromUrl('@Url.Action("ExportAllProductExcel", "Export")')" name="download" class="btn bg-blue button-1 download-btn">@T("Plugin.Misc.NopStation.B2BB2CFeatures.DownloadableProducts.ExportExcelPricelist")</button>
				<button type="submit" onclick="ErpAccountCommon.downloadFromUrl('@Url.Action("ExportAllProductPdf", "Export")')" name="download" class="btn bg-blue button-1 download-btn">@T("Plugin.Misc.NopStation.B2BB2CFeatures.DownloadableProducts.ExportPDFPricelist")</button>
			</div>
			<div class="btn-container download-btn-container">
				<button type="submit" onclick="ErpAccountCommon.downloadFromUrl('@Url.Action("ExportLastNOrdersPerAccountExcel", "Export")')" name="download" class="btn bg-blue button-1 download-btn">@T("Plugin.Misc.NopStation.B2BB2CFeatures.DownloadableProducts.ExportLastNOrderExcelPricelist")</button>
				<button type="submit" onclick="ErpAccountCommon.downloadFromUrl('@Url.Action("ExportLastNOrdersPerAccountPdf", "Export")')" name="download" class="btn bg-blue button-1 download-btn">@T("Plugin.Misc.NopStation.B2BB2CFeatures.DownloadableProducts.ExportLastNOrderPDFPricelist")</button>
			</div>
		</div>
		<div class="images">
			<img src="/images/thumbs/price-list-one.png" alt="Price list one" />
			<img src="/images/thumbs/price-list-two.png" alt="Price list two" />
		</div>
	</div>
</div>