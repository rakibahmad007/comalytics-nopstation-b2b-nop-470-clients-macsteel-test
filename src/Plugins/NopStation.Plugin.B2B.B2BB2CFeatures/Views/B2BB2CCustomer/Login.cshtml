@model LoginModel
@using Nop.Core
@using Nop.Core.Domain.Customers
@using NopStation.Plugin.B2B.B2BB2CFeatures;
@using Nop.Services.Configuration

@inject Nop.Core.IStoreContext _storeContext
@inject IWebHelper webHelper
@inject Nop.Services.Customers.ICustomerService customerService
@inject Nop.Services.Configuration.ISettingService _settingService

@{
    Layout = "_ColumnsOne";

    //title
    NopHtml.AddTitleParts(T("PageTitle.Login").Text);
    //page class
    NopHtml.AppendPageCssClassParts("html-login-page");

    //register URL with return URL (if specified)
    var registerUrl = Url.RouteUrl("Register", new { returnUrl = this.Context.Request.Query["returnUrl"] }, webHelper.GetCurrentRequestProtocol());

    var storeScope = await _storeContext.GetActiveStoreScopeConfigurationAsync();
    var settings = await _settingService.LoadSettingAsync<B2BB2CFeaturesSettings>(storeScope);
}
<div class="page login-page">
    <div class="page-title">
        <h1>@T("Account.Login.Welcome")</h1>
    </div>
    @await Html.PartialAsync("_ExternalAuthentication.Errors")
    <div class="page-body">
        @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.LoginTop, additionalData = Model })
        <div class="customer-blocks">
            @if (Model.RegistrationType == UserRegistrationType.Disabled)
            {
                <div class="new-wrapper">
                    <div class="title">
                        @T("Account.Register")
                    </div>
                    <div class="inner-wrapper">
                        <div class="text">
                            @T("Account.Register.Result.Disabled")
                        </div>
                    </div>
                </div>
            }
            else if (Model.CheckoutAsGuest)
            {
                <div class="new-wrapper checkout-as-guest-or-register-block">
                    <div class="title">
                        <strong>@T("Account.Login.CheckoutAsGuestOrRegister")</strong>
                    </div>
                    <div class="inner-wrapper">
                        <div class="text">
                            @await Component.InvokeAsync(typeof(TopicBlockViewComponent), new { systemName = "CheckoutAsGuestOrRegister" })
                        </div>
                        <div class="buttons">
                            <button type="button" class="button-1 checkout-as-guest-button" onclick="location.href='@Url.RouteUrl("Checkout")'">@T("Account.Login.CheckoutAsGuest")</button>
                            @if (settings.IsB2BUserRegisterAllowed)
                            {
                                <button onclick="registerButtonClick()" data-toggle="modal" data-target="#registrationTypeDialog" type="button" class="button-1 register-button" onclick="location.href='@registerUrl'">@T("Account.Register")</button>
                            }
                            else
                            {
                                <button type="button" class="button-1 register-button" onclick="location.href='@registerUrl'">@T("Account.Register")</button>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="new-wrapper register-block">
                    <div class="title">
                        <strong>@T("Account.Login.NewCustomer")</strong>
                    </div>
                    <div class="inner-wrapper">
                        <div class="text">
                            @T("Account.Login.NewCustomerText")
                        </div>
                        <div class="buttons">
                            @if (settings.IsB2BUserRegisterAllowed && settings.IsB2CUserRegisterAllowed)
                            {
                                <button onclick="registerButtonClick()" data-toggle="modal" data-target="#registrationTypeDialog" type="button" class="button-1 register-button" onclick="location.href='@registerUrl'">@T("Account.Register")</button>
                            }
                            else if (settings.IsB2BUserRegisterAllowed)
                            {
                                <button type="button" class="button-1 register-button" onclick="location.href='@Url.RouteUrl("B2BRegister")'">@T("Account.Register")</button>
                            }                          
                            else if (settings.IsB2CUserRegisterAllowed)
                            {
                                <button type="button" class="button-1 register-button" onclick="location.href='@Url.RouteUrl("B2CRegister")'">@T("Account.Register")</button>
                            }
                            else
                            {
                                <button type="button" class="button-1 register-button" onclick="location.href='@registerUrl'">@T("Account.Register")</button>
                            }
                        </div>
                    </div>
                </div>
            }

            <div id="registrationTypeDialog" class="custom-modal registration-type-dialog" title='@T("NopStation.B2BB2CFeatures.Register.Notification.Title")' style="display: none;">
                <div class="dialog-center-register popup-content">
                    @T("NopStation.B2BB2CFeatures.Register.Notification.Description")
                </div>
                <br />
                <div class="register-confirm-buttons login-page popup-button-wrapper">
                    <button type="button" class="button-1 popup-button" onclick="redirectToB2BRegister()"><span>@T("NopStation.B2BB2CFeatures.Register.Notification.Yes")</span></button>
                    <button type="button" class="button-1 popup-button" onclick="redirectToB2CRegister()"><span>@T("NopStation.B2BB2CFeatures.Register.Notification.No")</span></button>
                </div>
                <script asp-location="Footer">
                    function redirectToB2BRegister() {
                        window.location.href = "@Url.RouteUrl("B2BRegister")";
                    }
                    function redirectToB2CRegister() {
                        window.location.href = "@Url.RouteUrl("B2CRegister")";
                    }
                </script>
            </div>
            <script asp-location="Footer">
                function registerButtonClick() {
                    $("#header-links-mobile").hide();
                    $("#registrationTypeDialog").dialog({
                        modal: true,
                        draggable: false,
                        closeOnEscape: true
                    });
                }
            </script>

            <div class="returning-wrapper fieldset">

                <div class="site-logo">
                    <img src="/images/thumbs/0000030_0000163_UVP-%20logo.png" alt="Site logo" />
                </div>

                <div class="welcome-image">
                    <img src="/images/welcome.png" alt="Welcome image" />
                </div>

                <form asp-route="Login" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post" autocomplete="off">
                    <div class="title active">
                        <strong>@T("Account.Login.ReturningCustomer")</strong>
                    </div>
                    <div class="inner-wrapper show">
                        <div asp-validation-summary="ModelOnly" class="message-error">@T("Account.Login.Unsuccessful")</div>
                        <div class="form-fields">
                            @if (Model.UsernamesEnabled)
                            {
                                <div class="inputs">
                                    <label asp-for="Username" asp-postfix=":"></label>
                                    <input asp-for="Username" class="username" autofocus="autofocus" />
                                    <span asp-validation-for="Username"></span>
                                </div>
                            }
                            else
                            {
                                <div class="inputs">
                                    <label asp-for="Email" asp-postfix=":"></label>
                                    <input asp-for="Email" class="email" autofocus="autofocus" placeholder="Email"/>
                                    <span asp-validation-for="Email"></span>
                                </div>
                            }
                            <div class="inputs">
                                <label asp-for="Password" asp-postfix=":"></label>
                                <input asp-for="Password" class="password" id="password-input" placeholder="Password" />
                                <span asp-validation-for="Password"></span>
                                <span id="toggle-password"></span>
                                <script>
                                    document.getElementById("toggle-password").addEventListener("click", function(event) {
                                        event.target.classList.toggle("active");
                                        const passwordInput = document.getElementById("password-input");
                                        // Toggle the type attribute
                                        if (passwordInput.type === "password") {
                                            passwordInput.type = "text";  // Change to text to show the password
                                        } else {
                                            passwordInput.type = "password";  // Change back to password to hide it
                                        }
                                    });
                                </script>
                            </div>
                            <div class="inputs reversed">
                                <span class="forgot-password">
                                    <a asp-route="PasswordRecovery">@T("Account.Login.ForgotPassword")</a>
                                </span>
                            </div>
                            <div class="inputs reversed">
                                <input asp-for="RememberMe" />
                                <label asp-for="RememberMe"></label>
                            </div>
                            @if (Model.DisplayCaptcha)
                            {
                                <nop-captcha />
                            }
                        </div>
                        <div class="buttons">
                            <button type="submit" class="button-1 login-button">@T("Account.Login.LoginButton")</button>
                            @if (settings.IsB2BUserRegisterAllowed)
                            {
                                <button onclick="registerButtonClick()" data-toggle="modal" data-target="#registrationTypeDialog" type="button" class="button-1 register-button" onclick="location.href='@registerUrl'">@T("Account.Register")</button>
                            }
                            else
                            {
                                <button type="button" class="button-1 register-button" onclick="location.href='@registerUrl'">@T("Account.Register")</button>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
        @{
            var externalMethods = await Component.InvokeAsync(typeof(ExternalMethodsViewComponent), "ExternalAuthentication");

            if (!String.IsNullOrEmpty(await externalMethods.RenderHtmlContentAsync()))
            {
                <div class="external-authentication">
                    @externalMethods
                </div>
            }
        }
        @await Component.InvokeAsync(typeof(TopicBlockViewComponent), new { systemName = "LoginRegistrationInfo" })
        @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.LoginBottom, additionalData = Model })
    </div>
</div>