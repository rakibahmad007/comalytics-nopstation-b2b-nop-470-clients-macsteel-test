<div class="fieldset">
    <div class="title">
        <strong>@T("Plugins.B2B.ManageB2BCustomer.Account.AccessRequest")</strong> <br />
        <h6>@T("Plugins.B2B.ManageB2BCustomer.Account.AccessRequest.Info")</h6>
    </div>
    <div class="form-fields">
        <div class="">
            @if (Model.AvailableB2BSalesOrganizations.Count > 0)
            {
                @foreach (var item in Model.AvailableB2BSalesOrganizations)
                {
                    <div class="checkboxMultiple">

                        <input class="checkboxMultipleInput" id="orgId_@item.Value" type="checkbox" name="ErpSalesOrganisationIdsArray" value="@item.Value" /><label class="checkboxMultipleLabel" for="orgId_@item.Value">@item.Text</label>
                    </div>
                }
            }
            <span asp-validation-for="ErpSalesOrganisationIdsArray"></span>
            <script asp-location="Footer">
                $(document).ready(function () {
                    var salesOrganizationIds = @Html.Raw(JsonConvert.SerializeObject(Model.ErpSalesOrganisationIdsArray));
                    if (salesOrganizationIds != null) {
                        for (var i = 0; i < salesOrganizationIds.length; i++) {
                            $("input[name=ErpSalesOrganisationIdsArray][value='" + salesOrganizationIds[i] + "']").prop("checked", true);
                        }
                    }

                    $('#register-button').on('click', function () {
                        var inputElements = document.getElementsByClassName('checkboxMultipleInput');
                        var checker = false;
                        for (var i = 0; inputElements[i]; ++i) {
                            if (inputElements[i].checked) {
                                checker = true;
                                return true;
                                break;
                            }
                        }
                        if (!checker) {
                            alert('@Html.Raw(JavaScriptEncoder.Default.Encode(T("Plugins.B2B.ManageB2BCustomer.Account.Fields.SalesOrganisationId.Required").Text))');
                            return false;
                        }
                    });
                });
            </script>
        </div>
    </div>
</div>

