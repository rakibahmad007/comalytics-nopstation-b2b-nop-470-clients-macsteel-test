@model ErpShipToAddressModelForCheckout
@using NopStation.Plugin.B2B.B2BB2CFeatures.Model.Checkout;

<div class="enter-address">
    <div asp-validation-summary="ModelOnly" class="message-error"></div>
    @{
        var dataDictAddress = new ViewDataDictionary(ViewData);
        if (Model.OnePageCheckoutEnabled)
        {
            @await Html.PartialAsync("~/Plugins/NopStation.Plugin.B2B.B2BB2CFeatures/Views/ErpCheckout/_OpcCreateOrUpdateErpShipToAddresses.cshtml",
                Model, dataDictAddress)
        }
        else
        {
            @await Html.PartialAsync("~/Plugins/NopStation.Plugin.B2B.B2BB2CFeatures/Views/ErpCheckout/_CreateOrUpdateErpShiptoAddresses.cshtml",
                Model, dataDictAddress)
        }
    }
</div>