<script asp-location="Footer">
    $(document).ready(function () {
        $("#checkoutShippingTabs").tabs();
        $('.trigger-ship-to-address-selector-button').show();
        displayAjaxLoading(true);
        if (@Model.SelectedShipToAddress.DeliveryOptionId == @((int)DeliveryOption.DeliverOrCollect))
        {
            clearPickUpPointAndSaveShippingOption();
        }
        else
        {
            clearShippingOptionAndSavePickupPoint();
        }
    });

    $("#collect").click(function () {
        $('.trigger-ship-to-address-selector-button').hide();

        var isPISChecked = $('#PickupInStore').is(':checked');
        if (!isPISChecked) {
            $('#PickupInStore').click();
        }
        $("#PickupInStore").val("True");

        displayAjaxLoading(true);
        clearShippingOptionAndSavePickupPoint();
    });

    $("#deliver").click(function () {
        $('.trigger-ship-to-address-selector-button').show();

        var isPISChecked = $('#PickupInStore').is(':checked');
        if (isPISChecked) {
            $('#PickupInStore').click();
        }
        $("#PickupInStore").val("False");

        displayAjaxLoading(true);
        clearPickUpPointAndSaveShippingOption();
    });

    function clearPickUpPointAndSaveShippingOption() {
        $.ajax({
            cache: false,
            type: "GET",
            url: "@(Url.Action("ClearPickUpPointAndSaveShippingOption", "ErpCheckout"))",
            success: function (data, textStatus, jqXHR) {
                if (data.success == undefined) {
                    //console.log("shipping cost found");
                    $('.div-order-totals').empty();
                    $('.div-order-totals').html(data);
                }
                else if (data.success && data.isB2CShippingCostERPCallUnSuccessful) {
                    //console.log("shipping cost not found");
                    $(".deliver-list").hide();
                    $(".deliver-list").removeClass("ui-tabs-active ui-state-active");
                    $(".collect-list").click();
                    $(".collect-list").addClass("ui-tabs-active ui-state-active");
                    $("#DeliverWarningDialog").dialog({
                        modal: true,
                        draggable: false,
                        closeOnEscape: true
                    });
                }
                else if (!data.success && data.redirectToShoppingCart) {
                    setLocation("/cart");
                }
                displayAjaxLoading(false);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.error(errorThrown);
                alert("Something went wrong");
                setLocation("/cart");
            }
        });
    }

    function clearShippingOptionAndSavePickupPoint() {
        $.ajax({
            cache: false,
            type: "GET",
            url: "@(Url.Action("ClearShippingOptionAndSavePickupPoint", "ErpCheckout"))",
            success: function (data, textStatus, jqXHR) {
                $('.div-order-totals').empty();
                $('.div-order-totals').html(data);
                displayAjaxLoading(false);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.error(errorThrown);
                alert("Something went wrong.");
                setLocation("/cart");
            }
        });
    }

    $(".trigger-ship-to-address-selector-button").click(function (e) {
        e.preventDefault();
        if ($('.b2c-address-selector-button').length) {
            $('.b2c-address-selector-button').click();
        }
    });
</script>

