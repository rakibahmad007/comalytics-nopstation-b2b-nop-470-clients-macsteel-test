<script>
    $(document).ready(function () {
        $("#confirmButton").click(function (e) {
            e.preventDefault();
            displayAjaxLoading(true);
            var error = false;
            var dp = false;

            $('*[id*=selectedDeliveryDate]').each(function () {
                var wholeData = $(this);
                //console.log("this: ", wholeData);

                var warehouseId = $(this).attr("data-warehouseId");
                //console.log("warehouse id:", warehouseId);

                var date;
                var isFullLoadRequired = false;
                if (wholeData.is('.hasDatepicker')) {
                    date = wholeData.datepicker('getDate');
                    //console.log("date from datepicker: ", date);
                    dp = true;
                    //date = wholeData.val();
                    //console.log("date from element: ", wholeData.val());
                }
                else {
                    if ($(this).attr("data-fullLoadRequired"))
                        isFullLoadRequired = true;

                    //console.log("isFullLoadRequired: ", isFullLoadRequired);
                    if (isFullLoadRequired === false) {
                        date = wholeData.find(":selected").val();
                        //console.log("date from select list: ", date);
                    }
                }

                if (isFullLoadRequired === false) {
                    if (!date || date == '') {
                        //console.log("validation error");
                        $(".selectedDeliveryDate-" + warehouseId).closest('.delivery-date-header').append('<div class="validation-error"><span class="field-validation-error" style="font-size:16px;">@T("Plugins.Payments.B2BCustomerAccount.Checkout.SelectDeliveryDate")</span><div>');
                        error = true;
                    }
                    else {
                        $('#selectedDeliveryDate-1').closest('.delivery-date-header').find('.validation-error').remove();

                        var day, year, month, splittedDate;
                        //console.log("dp", dp);
                        if (dp === true) {
                            day = date.getDate(), month = date.getMonth() + 1, year = date.getFullYear(), hour = date.getHours();

                            month = (month < 10 ? "0" : "") + month;
                            day = (day < 10 ? "0" : "") + day;
                            hour = (hour < 10 ? "0" : "") + hour;
                        }

                        else {
                            splittedDate = date.toString().replaceAll('/', '-');
                            //console.log("date replaced /: ", splittedDate);
                            var pieces = splittedDate.split(/[\s-]+/);
                            //console.log(pieces.length);
                            day = pieces[pieces.length - 3];
                            month = pieces[pieces.length - 2];
                            year = pieces[pieces.length - 1];
                            //console.log("pieces: ", day, month, year);
                        }

                        $('.itemDeliveryDate-' + warehouseId).each(function () {

                            var formattedDateVal = year + "-" + month + "-" + day;

                            $(this).val(formattedDateVal);
                            //console.log("item delivery date: ", $(this).val());
                        });
                    }
                }
            });

            var specialInstructions = $('#@Html.IdFor(model => model.SpecialInstructions)').val();
            if (specialInstructions) {
                var len = specialInstructions.length;
                if (len > 90) {
                    error = true;
                }
            }

            if (error === false) {
                //console.log("click submit button");
                $('#shippingaddress-next-button').click();
            }

            displayAjaxLoading(false);
        });
    });
</script>

